{
  "name": "algonive_realtimechatapp-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "description": "Real-time chat application backend with Socket.IO",
  "keywords": [
    "chat",
    "realtime",
    "socket.io",
    "express",
    "mongodb"
  ],
  "author": "AlgoChat Team",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docker:build": "docker build -t algochat-backend .",
    "docker:run": "docker run -p 5000:5000 algochat-backend"
  },
  "dependencies": {
    "@google-cloud/translate": "^8.5.1",
    "@socket.io/admin-ui": "^0.5.1",
    "@tensorflow/tfjs-node": "^4.22.0",
    "bad-words": "^3.0.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.9.1",
    "joi": "^18.0.2",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^2.2.1",
    "natural": "^6.12.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "openai": "^4.104.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-microsoft": "^1.0.0",
    "passport-saml": "^3.2.0",
    "qrcode": "^1.5.4",
    "rate-limit-mongo": "^2.3.2",
    "sentiment": "^5.0.2",
    "sharp": "^0.33.4",
    "shortid": "^2.2.17",
    "socket.io": "^4.7.5",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!test/**",
      "!coverage/**",
      "!logs/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
