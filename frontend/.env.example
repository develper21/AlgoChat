# Backend API URL - Replace with your deployed backend URL
VITE_API_URL=http://localhost:5000

# Socket.IO URL - Replace with your deployed backend URL
VITE_SOCKET_URL=http://localhost:5000

# VAPID Public Key for Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here

# AI Feature Configuration
VITE_ENABLE_AI_SUGGESTIONS=true
VITE_ENABLE_AUTO_TRANSLATION=true
VITE_ENABLE_CONTENT_MODERATION=true
VITE_ENABLE_CHATBOT=true

# Default User Language for Translation
VITE_DEFAULT_LANGUAGE=en

# AI UI Configuration
VITE_AI_ASSISTANT_VISIBLE=true
VITE_TRANSLATION_WIDGET_VISIBLE=true
VITE_MODERATION_WARNINGS_VISIBLE=true
